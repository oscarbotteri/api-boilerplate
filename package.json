{
  "name": "api-boilerplate",
  "version": "1.0.0",
  "description": "Clean and simple REST/Graphql boilerplate API for NodeJS with ExpressJS",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node ./src/app.ts",
    "start:prod": "node dist/main",
    "watch": "nodemon --exec ts-node -- ./src/app.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "api",
    "expressjs",
    "boilerplate",
    "graphql",
    "rest",
    "typescript",
    "skeleton",
    "starter-kit"
  ],
  "author": "Oscar Botteri",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "dependencies": {
    "apollo-server-express": "^2.15.1",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.2.0",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.4",
    "type-graphql": "^1.0.0-rc.3",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-routing-controllers-extensions": "^0.2.0",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express-serve-static-core": "^4.17.8",
    "@types/jest": "^26.0.3",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
